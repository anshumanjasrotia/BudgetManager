@model RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="col-xl-5 col-lg-5 col-md-10">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-4">
                        <div class="text-center">
                            <h1 class="h5 text-gray-900 mb-4">Budget Planner</h1>
                        </div>
                        <div class="alert alert-danger">
                            Incorrect username or password.
                        </div>
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "user", novalidate = "novalidate" }))
                        {
                            @*needs-validation was-validated*@
                            <div class="form-group">
                                @Html.LabelFor(m=>m.FirstName, new {@class = "text-dark" })
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", required = "required"  })
                                <div class="invalid-feedback">
                                    Username is required.
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.LastName, new {@class = "text-dark" })
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", required = "required" })
                                <div class="invalid-feedback">
                                    Username is required.
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new {@class = "text-dark" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required" })
                                <div class="invalid-feedback">
                                    Username is required.
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new {@class = "text-dark" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                <div class="invalid-feedback">
                                    Username is required.
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new {@class = "text-dark" })
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                <div class="invalid-feedback">
                                    Username is required.
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Register</button>
                            @*<hr>
                            <a href="index.html" class="btn btn-google">
                                <i class="fab fa-google fa-fw"></i> Login with Google
                            </a>
                            <a href="index.html" class="btn btn-facebook">
                                <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                            </a>*@
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

